# CodeKiwi Configuration
# Single Source of Truth for all configuration values

# ============================================
# Port Configuration
# ============================================
CODEKIWI_WEB_PORT_DEFAULT=8080
CODEKIWI_DEV_PORT_DEFAULT=3000
CODEKIWI_TTYD_PORT=7681
CODEKIWI_NGINX_PORT=80

# ============================================
# Directory Configuration
# ============================================
CODEKIWI_WORKSPACE_DIR=/workspace
CODEKIWI_INSTALL_DIR_NAME=.codekiwi

# ============================================
# Container/Image Configuration
# ============================================
CODEKIWI_CONTAINER_NAME_PREFIX=codekiwi-runtime
CODEKIWI_IMAGE_REGISTRY=drasdp
CODEKIWI_IMAGE_NAME=codekiwi-runtime
CODEKIWI_IMAGE_TAG_DEFAULT=latest
CODEKIWI_IMAGE_TAG_DEV=dev

# ============================================
# Repository Configuration
# ============================================
CODEKIWI_GITHUB_URL=https://github.com/drasdp/codekiwi-cli
RAW_CODEKIWI_GITHUB_URL=https://raw.githubusercontent.com/drasdp/codekiwi-cli/main

# ============================================
# Template Repository Configuration
# ============================================
CODEKIWI_TEMPLATE_GITHUB_URL=https://github.com/aardvark-team-dev/codekiwi-template.git

# ============================================
# Template Configuration
# ============================================
CODEKIWI_INSTALL_TEMPLATE_DEFAULT=yes

# ============================================
# Runtime Configuration
# ============================================
CODEKIWI_RESTART_POLICY=unless-stopped

# ============================================
# Docker Compose Configuration
# ============================================
CODEKIWI_COMPOSE_FILE_PROD=docker-compose.yaml
CODEKIWI_COMPOSE_FILE_DEV=docker-compose.dev.yaml

# ============================================
# Computed Values (derived from above)
# ============================================
# These are constructed from the above variables
# Full image name: ${CODEKIWI_IMAGE_REGISTRY}/${CODEKIWI_IMAGE_NAME}:${CODEKIWI_IMAGE_TAG_DEFAULT}
